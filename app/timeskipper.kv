<BLueLabel@MDLabel>:
    id: clock
    halign: "center"
    valign: "center"
    size_hint: (None, None)
    theme_font_name: "Custom"
    font_name: "ShareTechMono"
    theme_font_size: "Custom"
    font_size: "20dp"
    color: self.theme_cls.primaryColor

<Root>:
    md_bg_color: self.theme_cls.surfaceColor
    AnchorLayout:
        anchor_x: "right"
        anchor_y: "top"
        padding: dp(10)
        MDBoxLayout:
            adaptive_size: True
            spacing: dp(10)
            MDIconButton:
                style: "standard"
                icon: "white-balance-sunny" if self.theme_cls.theme_style == "Light" else "moon-waning-crescent"
                on_release: root.switch_theme()
            MDIconButton:
                style: "standard"
                icon: "palette"
                on_release: root.switch_palette()
            MDIconButton:
                style: "standard"
                icon: "cog"
                on_release: root.open_time_picker()
    AnchorLayout:
        anchor_x: "left"
        anchor_y: "top"
        padding: dp(10)
        BLueLabel:
            id: clock
            halign: "left"
            width: dp(150)
            height: dp(45)
            padding: dp(10)
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        MDBoxLayout:
            adaptive_height: True
            orientation: "vertical"
            spacing: dp(40)
            halign: "center"
            size_hint_x: 0.6
            Widget:
                size_hint_y: None
                height: dp(20)
            MDBoxLayout:
                adaptive_height: True
                spacing: dp(20)
                valign: "center"
                Widget:
                    size_hint_x: None
                    width: dp(30)
                MDLinearProgressIndicator:
                    id: progress
                    type: "determinate"
                    running_determinate_transition: "linear"
                BLueLabel:
                    id: percent
                    text: "0%"
                    size_hint_y: 1
                    halign: "left"
                    width: dp(50)
            BLueLabel:
                id: time
                height: dp(50)
                size_hint_x: 1
                font_size: "30dp"
    AnchorLayout:
        id: version
        anchor_x: "left"
        anchor_y: "bottom"
        opacity: 0
        padding: dp(10)
        BLueLabel:
            text: "v" + app.__version__
            halign: "left"
            width: dp(150)
            height: dp(45)
            padding: dp(10)
